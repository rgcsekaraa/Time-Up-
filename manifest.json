{
  "manifest_version": 3,
  "name": "Time Up? - Countdown Timer",
  "description": "Set a goal and track how much time is left until the deadline.",
  "version": "1.0",
  "permissions": ["storage", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Up? - Countdown Timer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "homepage_url": "https://sekaraa.com",
  "offline_enabled": true
}
